%%%%myiso.ist  		Makeindex style file for ISO documents
%group_skip "\n\n"       % no vertical space between blocks
headings_flag 1         % make sure headings are turned on
heading_prefix "{\\bf "
heading_suffix "}\\nopagebreak%\n \\indexspace\\nopagebreak%"
delim_0 "\\dotfill "
delim_1 "\\dotfill "
delim_2 "\\dotfill "
delim_r "~--~"
suffix_2p "\\,f."
suffix_3p "\\,ff."

\endinput
%%
%% End of file `myiso.ist'.
